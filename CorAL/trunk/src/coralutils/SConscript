utilities.h \
')

coralenv.Install('#include', [inclist])

srclist = Split(' \
Arrays/arraycalc.cc \
Arrays/charray.cc \
Arrays/mclist.cc \
Arrays/threed.cc \
Arrays/ylmarray.cc \
GSLMatrix/gslmatrix.cc \
